<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sign Up</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body class="bg-[#fafafa] font-[Segoe_UI,Arial,sans-serif] text-gray-900 min-h-screen flex flex-col">

  <!-- Navbar -->
  <nav class="w-full sticky top-0 z-20 bg-white/70 backdrop-blur-md border-b border-gray-200">
    <div class="max-w-6xl mx-auto flex justify-center space-x-12 py-6 text-sm font-semibold uppercase tracking-wider">
      <a href="/home" class="text-gray-900 hover:text-black transition-transform transform hover:scale-110">Home</a>
      <a href="/login" class="text-gray-700 hover:text-gray-900 transition-transform transform hover:scale-110">Login</a>
      <a href="/signup" class="text-gray-700 hover:text-gray-900 transition-transform transform hover:scale-110">Sign Up</a>
      <a href="/admin/login" class="text-gray-700 hover:text-gray-900 transition-transform transform hover:scale-110">Admin</a>
    </div>
  </nav>

  <!-- Sign-Up Form -->
  <main class="flex-grow flex items-center justify-center px-6 py-16">
    <form
      id="signupForm"
      action="/signup"
      method="post"
      class="bg-white/80 backdrop-blur-md shadow-xl rounded-2xl p-10 w-full max-w-md border border-gray-100"
    >
      <h1 class="text-3xl font-bold text-center text-gray-900 mb-8">Create Account</h1>

      <!-- Error Messages -->
      <% if (typeof error !== 'undefined' && error.length > 0) { %>
        <div class="text-center mb-4 text-red-600">
          <% error.forEach(function(err) { %>
            <p><%= err.msg %></p>
          <% }) %>
        </div>
      <% } %>

      <!-- Full Name -->
      <label for="name" class="block text-gray-700 mb-1 font-medium">Full Name:</label>
      <input
        type="text"
        name="name"
        placeholder="Enter your name"
        class="w-full border border-gray-300 rounded-lg px-4 py-3 mb-4 focus:border-black focus:ring-1 focus:ring-black focus:outline-none transition"
        required
      />

      <!-- Email -->
      <label for="email" class="block text-gray-700 mb-1 font-medium">Email:</label>
      <input
        name="email"
        type="email"
        placeholder="Enter your email"
        class="w-full border border-gray-300 rounded-lg px-4 py-3 mb-4 focus:border-black focus:ring-1 focus:ring-black focus:outline-none transition"
        required
      />


      <!-- Password -->
      <label for="password" class="block text-gray-700 mb-1 font-medium">Password:</label>
      <input
        type="password"
        name="password"
        placeholder="Enter your password"
        class="w-full border border-gray-300 rounded-lg px-4 py-3 mb-4 focus:border-black focus:ring-1 focus:ring-black focus:outline-none transition"
        required
      />

      <!-- Confirm Password -->
      <label for="confirmPassword" class="block text-gray-700 mb-1 font-medium">Confirm Password:</label>
      <input
        type="password"
        name="confirmPassword"
        placeholder="Confirm your password"
        class="w-full border border-gray-300 rounded-lg px-4 py-3 mb-6 focus:border-black focus:ring-1 focus:ring-black focus:outline-none transition"
        required
      />

      <!-- Submit Button -->
      <button
        type="submit"
        class="w-full bg-black text-white font-semibold py-3 rounded-full hover:bg-gray-900 hover:scale-105 active:scale-95 transition-transform duration-200 shadow-lg"
      >
        Sign Up
      </button>

      <!-- Redirect Link -->
      <p class="text-center text-gray-600 text-sm mt-4">
        Already have an account?
        <a href="/login" class="text-black font-medium hover:text-gray-800">Login</a>
      </p>
    </form>
  </main>

  <!-- Footer -->
  <footer class="w-full text-center text-gray-400 text-sm py-6 border-t border-gray-200">
    © <%= new Date().getFullYear() %> Sign Up — Built with TailwindCSS
  </footer>

</body>
</html>
